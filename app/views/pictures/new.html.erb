<%= form_for @picture,:html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url, "or image Url" %>
    <%= f.text_field :remote_image_url %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>